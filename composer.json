{
    "name": "simialbi/yii2-bulletin-board",
    "type": "yii2-extension",
    "description": "Bulletin board module for yii2",
    "keywords": [
        "yii2",
        "forum",
        "bulletin board"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "simialbi",
            "email": "simi.albi@outlook.com"
        }
    ],
    "support": {
        "source": "https://github.com/simialbi/yii2-bulletin-board",
        "issues": "https://github.com/simialbi/yii2-bulletin-board/issues"
    },
    "minimum-stability": "beta",
    "require": {
        "php": ">=8.0",
        "ext-yaml": "*",
        "yiisoft/yii2": "^2.0.20",
        "kartik-v/yii2-grid": "^3.3.0",
        "kartik-v/yii2-widget-select2": "^2.1.0",
        "rmrevin/yii2-fontawesome": "^3.4.0",
        "sandritsch91/yii2-widget-flatpickr": "^1.0.0",
        "simialbi/yii2-simialbi-base": ">=0.13.0 <1.0 | ^1.0.0",
        "simialbi/yii2-widget-chart": "^0.8.0",
        "simialbi/yii2-widget-dropzone": "^2.0.0"
    },
    "require-dev": {
        "fortawesome/font-awesome": "^5.10.0",
        "simialbi/yii2-summernote": "^1.2.2",
        "yiisoft/yii2-coding-standards": "~2.0",
        "yiisoft/yii2-bootstrap5": "^2.0.0"
    },
    "suggest": {
        "sandritsch91/yii2-froala-editor": "Install this extension to use rich text fields in comment fields",
        "simialbi/yii2-summernote": "Install this extension to use rich text fields in comment fields",
        "yiisoft/yii2-bootstrap4": "Install this extension to use with Bootstrap 4",
        "yiisoft/yii2-bootstrap5": "Install this extension to use with Bootstrap 5"
    },
    "autoload": {
        "psr-4": {
            "simialbi\\yii2\\bulletin\\": "src"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
